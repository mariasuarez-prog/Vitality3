<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F8FF"
    tools:context=".personalizarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:text="Datos Personales y de Salud"
            android:textColor="#368939"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etEdad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edad (años)"
            android:inputType="number"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etPeso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Peso (kg) - ej: 75.5"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etAltura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Altura (cm) - ej: 175"
            android:inputType="number"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sexo biológico:"
            android:textColor="#333333"
            android:layout_marginBottom="4dp"/>
        <RadioGroup
            android:id="@+id/rgSexo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">
            <RadioButton
                android:id="@+id/rbHombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hombre"
                android:layout_marginEnd="20dp"/>
            <RadioButton
                android:id="@+id/rbMujer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mujer"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Condiciones de Salud"
            android:textColor="#39873C"
            android:textSize="18sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/cbDiabetes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diabetes"
            android:layout_marginBottom="8dp"/>

        <CheckBox
            android:id="@+id/cbHipertension"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hipertensión"
            android:layout_marginBottom="8dp"/>

        <CheckBox
            android:id="@+id/cbTiroides"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Problemas de Tiroides"
            android:layout_marginBottom="8dp"/>

        <CheckBox
            android:id="@+id/cbColesterol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Colesterol Alto"
            android:layout_marginBottom="8dp"/>

        <CheckBox
            android:id="@+id/cbCeliaca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enfermedad Celíaca (Intolerancia al Gluten)"
            android:layout_marginBottom="8dp"/>

        <CheckBox
            android:id="@+id/cbLactosa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Intolerancia a la Lactosa"
            android:layout_marginBottom="8dp"/>

        <CheckBox
            android:id="@+id/cbOtros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Otras Condiciones o Alergias"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnGuardarDatos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Datos y Continuar"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:padding="16dp"
            android:textSize="18sp"/>

    </LinearLayout>
</ScrollView>